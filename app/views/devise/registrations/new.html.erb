<%= stylesheet_link_tag 'logreg', media: 'all', 'data-turbolinks-track': 'reload'%>
<div class="actions">
  <div class="pseudo">
    <div class="ab">
      <h4>Регистрация</h4>
    </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :avatar, 'аватар' %>
          <%= f.file_field :avatar %>
        </div>

        <div class="field">
          <%= f.label :email, 'почта' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'lnl' %>
        </div>

        <div class="field">
          <%= f.label :username, 'ник' %>
          <%= f.text_field :username, autocomplete: "username", class: 'lnl' %>
        </div>

        <div class="field fixed">
          <%= f.label :password, 'пароль' %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'lnl' %>

        </div>

        <div class="field fixed">
          <%= f.label :password_confirmation, 'подтверждение пароля' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'lnl' %>
        </div>


        <%= f.submit "зарегестрироваться", class: 'lol' %>

        <div class="magic">
          <div class="ml vk"></div>
          <div class="ml google"></div>
          <div class="ml twit"></div>
        </div>

        <% end %>

        <div class="linked linked-op">
          <%= render "devise/shared/links" %>
        </div>
  </div>
</div>
