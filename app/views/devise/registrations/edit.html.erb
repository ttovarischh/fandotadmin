<div class="" id="">

  <div class="bread">
    <%= link_to 'назад', :back %>
    <p>/</p>
    <p>мой профиль</p>
  </div>

  <div class="edit">
    <div class="a_bg">
      <%= image_tag current_user.avatar_url, class: "a_edit" %>
    </div>
    <h2 class="none">Edit <%= resource_name.to_s.humanize %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="plz">
        <div class="pic-wrap">
          <img src="" alt="">
          <div><%= f.file_field :avatar %></div>
        </div>

          <div class="nick_em">
            <div class="field">
              <%= f.label :email, 'почта' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'lnl' %>
            </div>

            <div class="field">
              <%= f.label :username, 'ник' %><br />
              <%= f.text_field :username, autocomplete: "username", class: 'lnl' %>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
        <div class="downrow">
          <div class="field">
            <%= f.label :password, 'новый пароль' %> <br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'lnl' %>
            <% if @minimum_password_length %>
              <br />
              <em style="color:#303030">оставь поле пустым, если не меняешь</em>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, 'подтверждение пароля' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'lnl' %>
          </div>

          <div class="field">
            <%= f.label :current_password, 'текущий пароль' %> <br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: 'lnl' %>
            <br /><em style="color:#303030">чтобы мы могли сохранить изменения</em>
          </div>

          <div class="e_actions">
            <div class="cosv">

            </div>
            <%= f.submit "Сохранить", :class => 'lol ev' %>
          </div>
        <% end %>
        </div>
      </div>

      <div class="cosv">
        <p><%= button_to "Удалить профиль", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "secondhand" %></p>
        <p><%= link_to "Выйти", destroy_user_session_path, :method => :delete, class: "secondhand" %></p>
      </div>
    </div>


  </div>
</div>
