<div class="all_container" id="cey">
  <div class="left_menu">
			<p class="second"><%= link_to "таймлайны", "../posts" %></p>
			<p><%= link_to "пользователи", users_path %></p>
			<p><%= link_to "категории", categories_path %></p>
			<p><%= link_to 'новый таймлайн', new_post_path %></p>
	</div>

  <div class="edit">
    <h2 class="none">Edit <%= resource_name.to_s.humanize %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

    <div class="upperrow">

      <div>
        <%= f.label :avatar %>
        <%= f.file_field :avatar %>
      </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'lnl' %>
          </div>

          <div class="field">
            <%= f.label :username %><br />
            <%= f.text_field :username, autocomplete: "username", class: 'lnl' %>
          </div>
        </div>
    </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    <div class="downrow">
      <div class="field">
        <%= f.label :password %> <i>(оставьте поле пустым, если не хотите менять пароль)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'lnl' %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> знаков минимум</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'lnl' %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(нам нужен ваш пароль, чтобы сохранить изменения)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'lnl' %>
      </div>

      <% if signed_in? %>
      <% if current_user.isadmin? %>
        <h3> Вы админ?
        <%= f.check_box :isadmin %></h3>
      <% end %>
    <% end %>


      <div class="actions">
        <%= f.submit "Сохранить", :class => 'lol ev' %>
      </div>
    <% end %>


    <p><%= button_to "Удалить профиль", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "lil" %></p>

    <%= link_to "Назад", :back %>
    </div>
  </div>
</div>
