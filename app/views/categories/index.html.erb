<div class="all_container" id="cey">
  <div class="left_menu">
			<p class="second"><%= link_to "таймлайны", "../posts" %></p>
			<p><%= link_to "пользователи", users_path %></p>
			<p class="ceyy"><%= link_to "категории", categories_path %></p>
			<p><%= link_to 'новый таймлайн', new_post_path %></p>
	</div>
  <p id="notice"><%= notice %></p>

  <div class="ci">
    <table>
      <thead>
        <tr>
          <th>Название</th>
          <th>Отображать?</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.display_in_navbar %></td>
            <td><%= link_to 'Show', category %></td>
            <td><%= link_to 'Edit', edit_category_path(category) %></td>
            <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <div class="buttons" id="categ">
          <%= link_to 'New Category', new_category_path %>
    </div>
  </div>
</div>
